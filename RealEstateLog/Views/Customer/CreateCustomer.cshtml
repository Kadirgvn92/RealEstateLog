
@{
    ViewData["Title"] = "CreateCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-wrapper">
    <div class="content m-4">
        <div class="container-fluid">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="row">
                        <div class="col-md-8 d-flex align-items-center">
                            <h6 class="mb-0 text-dark">Yeni Müşteri Oluşturma Ekranı</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body p-3">
                    <hr class="horizontal gray-light my-0">
                    <form method="post" asp-controller="Customer" asp-action="CreateCustomer" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Müşteri Adı Soyadı</label>
                            <input type="text" class="form-control form-control-s" name="CustomerFullName" placeholder="Müşteri adı girin">
                        </div>
                        <div class="form-group">
                            <label>Müşteri Telefon Numarası </label>
                            <input type="text" class="form-control form-control-s" name="CustomerPhone" placeholder="Müşteri bilgisini girin">
                        </div>
                        <div class="form-group">
                            <label>Müşteri Açıklama/Detay</label>
                            <textarea type="text" cols="5" class="form-control form-control-s" name="CustomerDescription" placeholder="Müşteri açıklaması girin"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Müşteri Oluştur</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>